<Window>:
    Calculate:
        name:"hesap-makinesi"
    Setting:
        name:"ozellikler"
    Properties:
        name:"surum"


<Calculate>:
    id:calculator
    display:giris
    BoxLayout:
        orientation:"vertical"

        StackLayout:
            padding:5
            orientation:"lr-tb"
            size_hint:1,.2

            Button:
                text:"Calculator"
                on_press:root.manager.current="surum"
                size_hint:.2,1
            Button:
                text:"Settings"
                on_press:root.manager.current= "ozellikler"
                size_hint:.2,1

        TextInput:
            multiline:False
            id:giris
            background_color:.01,.01,.01,1
            foreground_color:1,1,1,1


        BoxLayout:
            canvas.before:
                Color:
                    rgba:.01,.01,.01,1
                Rectangle:
                    pos:self.pos
                    size:self.size

            size_hint:1,.3
            padding:8
            spacing:2
            Button:
                text:"("
                on_press:giris.text+=self.text
            Button:
                text:")"
                on_press:giris.text+=self.text
            Button:
                text:"/"
                on_press:giris.text+=self.text
            Button:
                text:"*"
                on_press:giris.text+=self.text
            Button:
                text:"-"
                on_press:giris.text+=self.text
            Button:
                text:"C"
                on_press:giris.text=""
            Button:
                text:"Del"
                on_press:giris.text=giris.text[:-1]


        BoxLayout:
            padding:5,0,25,0
            GridLayout:
                canvas.before:
                    Color:
                        rgba:.5,.5,.5,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                padding:10
                cols:3
                rows:3
                Button:
                    text:"7"
                    on_press:giris.text+=self.text
                Button:
                    text:"8"
                    on_press:giris.text+=self.text
                Button:
                    text:"9"
                    on_press:giris.text+=self.text
                Button:
                    text:"4"
                    on_press:giris.text+=self.text
                Button:
                    text:"5"
                    on_press:giris.text+=self.text
                Button:
                    text:"6"
                    on_press:giris.text+=self.text
                Button:
                    text:"1"
                    on_press:giris.text+=self.text
                Button:
                    text:"2"
                    on_press:giris.text+=self.text
                Button:
                    text:"3"
                    on_press:giris.text+=self.text
            BoxLayout:
                padding:1
                size_hint:.2,1

                Button:
                    text:"+"
                    on_press:giris.text+=self.text
                    size_hint:.2,1
        BoxLayout:
            size_hint:1,.3
            padding:5
            Button:
                text:"0"
                on_press:giris.text+=self.text
            Button:
                text:"."
                on_press:giris.text+=self.text
            Button:
                text:"="
                font_size:70
                background_color:1,0,0,1
                on_press:calculator.calculate(giris.text)

